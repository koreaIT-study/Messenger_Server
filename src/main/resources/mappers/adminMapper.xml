<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 위 코드가 mapper 설정을 하는 코드 -->

<!-- Mapper를 사용하는 Repository의 전체 경로를 적어줘야함. -->
<mapper
	namespace="com.teamride.messenger.server.mapper.AdminMapper">
	<select id="getAll" resultType="AdminDTO">
		select * from admin
	</select>

	<select id="checkExistUser" resultType="Integer">
		select count(*) from
		admin where email = #{email}
	</select>

	<insert id="saveUser">
		INSERT INTO
		`messenger`.`admin`(`email`,`name`,`pwd`,`profile_img`)
		VALUES
		(#{email}, #{name}, #{pwd}, #{profileImg})
	</insert>
	
	<select id="getUserInfo" resultType="AdminDTO">
		select 
			*
		from
			admin
		where
			email = #{email} and pwd = #{pwd}
	</select>
</mapper>